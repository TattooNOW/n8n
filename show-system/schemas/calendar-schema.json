{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TattooNOW Weekly Show Content Calendar",
  "description": "52-week content calendar schema for TattooNOW weekly show episodes",
  "type": "object",
  "properties": {
    "year": {
      "type": "integer",
      "description": "Calendar year"
    },
    "presentations": {
      "type": "object",
      "description": "Master presentations that episodes are based on",
      "properties": {
        "P1": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "theme": { "type": "string" },
            "totalSlides": { "type": "integer" }
          }
        },
        "P2": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "theme": { "type": "string" },
            "totalSlides": { "type": "integer" }
          }
        },
        "P3": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "theme": { "type": "string" },
            "totalSlides": { "type": "integer" }
          }
        },
        "P4": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "theme": { "type": "string" },
            "totalSlides": { "type": "integer" }
          }
        }
      }
    },
    "quarters": {
      "type": "object",
      "description": "Quarterly themes and presentation mapping",
      "properties": {
        "Q1": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "weeks": { "type": "array", "items": { "type": "integer" } },
            "primaryPresentations": { "type": "array", "items": { "type": "string" } }
          }
        },
        "Q2": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "weeks": { "type": "array", "items": { "type": "integer" } },
            "primaryPresentations": { "type": "array", "items": { "type": "string" } }
          }
        },
        "Q3": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "weeks": { "type": "array", "items": { "type": "integer" } },
            "primaryPresentations": { "type": "array", "items": { "type": "string" } }
          }
        },
        "Q4": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "weeks": { "type": "array", "items": { "type": "integer" } },
            "primaryPresentations": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "episodeCategories": {
      "type": "array",
      "description": "13 episode content categories to cycle through",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "weeks": {
      "type": "array",
      "description": "52-week episode calendar",
      "items": {
        "type": "object",
        "required": ["week", "airDate", "episodeNumber", "title", "presentation"],
        "properties": {
          "week": {
            "type": "integer",
            "minimum": 1,
            "maximum": 52
          },
          "quarter": {
            "type": "string",
            "enum": ["Q1", "Q2", "Q3", "Q4"]
          },
          "airDate": {
            "type": "string",
            "format": "date"
          },
          "episodeNumber": {
            "type": "integer"
          },
          "title": {
            "type": "string",
            "description": "Episode title"
          },
          "category": {
            "type": "string",
            "description": "Episode category (one of 13 categories)"
          },
          "presentation": {
            "type": "string",
            "enum": ["P1", "P2", "P3", "P4"],
            "description": "Which master presentation this episode draws from"
          },
          "slides": {
            "type": "array",
            "description": "Specific slide numbers referenced in this episode",
            "items": { "type": "integer" }
          },
          "guestName": {
            "type": "string"
          },
          "guestTitle": {
            "type": "string"
          },
          "newsletterTopic": {
            "type": "string",
            "description": "Topic for newsletter that week"
          },
          "meetingFocus": {
            "type": "string",
            "description": "Training/discussion focus for weekly meeting"
          },
          "keyTopics": {
            "type": "array",
            "items": { "type": "string" }
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["year", "presentations", "quarters", "episodeCategories", "weeks"]
}
