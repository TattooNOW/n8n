{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TattooNOW Guest Intake Form",
  "description": "Pre-show guest information and materials collection",
  "type": "object",
  "required": ["guestName", "guestEmail", "segmentType", "instagram"],
  "properties": {
    "guestName": {
      "type": "string",
      "title": "Full Name",
      "description": "Artist's full name as it should appear on screen"
    },
    "guestEmail": {
      "type": "string",
      "format": "email",
      "title": "Email Address",
      "description": "Primary contact email"
    },
    "guestPhone": {
      "type": "string",
      "title": "Phone Number",
      "description": "For pre-show coordination"
    },
    "segmentType": {
      "type": "string",
      "enum": ["showcase", "interview", "panel"],
      "title": "Segment Type",
      "description": "What type of segment will you be featured in?"
    },
    "artistTitle": {
      "type": "string",
      "title": "Professional Title",
      "description": "e.g., 'Fine Line Specialist', 'Color Realism Expert'",
      "examples": ["Fine Line & Micro-Realism Specialist", "Traditional Japanese Master"]
    },
    "bio": {
      "type": "string",
      "title": "Bio (2-3 sentences)",
      "description": "Brief professional bio for intro",
      "maxLength": 500
    },
    "yearsExperience": {
      "type": "integer",
      "title": "Years Tattooing",
      "minimum": 0
    },
    "instagram": {
      "type": "string",
      "title": "Instagram Handle",
      "description": "Without the @ symbol",
      "pattern": "^[a-zA-Z0-9._]+$"
    },
    "website": {
      "type": "string",
      "format": "uri",
      "title": "Website URL"
    },
    "studioName": {
      "type": "string",
      "title": "Studio Name"
    },
    "studioLocation": {
      "type": "string",
      "title": "City, State/Country"
    },
    "portfolioImages": {
      "type": "array",
      "title": "Portfolio Images (10-15 high-res tattoo photos)",
      "description": "Upload your best work. Min 2000px width, JPG or PNG.",
      "items": {
        "type": "object",
        "properties": {
          "filename": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "description": {
            "type": "string",
            "description": "Brief description: style, placement, significance"
          },
          "isHealed": {"type": "boolean", "default": false}
        },
        "required": ["filename", "url"]
      },
      "minItems": 5,
      "maxItems": 20
    },
    "referenceMaterials": {
      "type": "array",
      "title": "Reference Materials (optional)",
      "description": "Sketches, process shots, inspiration, studio photos",
      "items": {
        "type": "object",
        "properties": {
          "filename": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "type": {
            "type": "string",
            "enum": ["sketch", "process", "studio", "inspiration", "other"]
          },
          "description": {"type": "string"}
        },
        "required": ["filename", "url", "type"]
      }
    },
    "headshot": {
      "type": "object",
      "title": "Professional Headshot",
      "description": "High-res photo of you for intro graphics. Min 1000x1000px.",
      "properties": {
        "url": {"type": "string", "format": "uri"},
        "filename": {"type": "string"}
      },
      "required": ["url"]
    },
    "discussionTopics": {
      "type": "array",
      "title": "Preferred Discussion Topics",
      "description": "What do you want to talk about?",
      "items": {"type": "string"},
      "minItems": 3,
      "maxItems": 8,
      "examples": [
        ["Finding my signature style", "Building a waitlist", "Pricing strategies"],
        ["Journey into tattooing", "Advice for beginners", "Favorite projects"]
      ]
    },
    "avoidTopics": {
      "type": "array",
      "title": "Topics to Avoid (optional)",
      "description": "Any sensitive topics you prefer not to discuss?",
      "items": {"type": "string"}
    },
    "achievements": {
      "type": "array",
      "title": "Notable Achievements / Awards",
      "description": "Convention awards, features, recognition",
      "items": {"type": "string"},
      "examples": [["Best of Show 2024", "Featured in Inked Magazine", "15+ years experience"]]
    },
    "specializations": {
      "type": "array",
      "title": "Style Specializations",
      "items": {
        "type": "string",
        "enum": [
          "Fine Line",
          "Micro-Realism",
          "Color Realism",
          "Black & Grey",
          "Traditional",
          "Neo-Traditional",
          "Japanese",
          "Blackwork",
          "Geometric",
          "Watercolor",
          "Dotwork",
          "Tribal",
          "Lettering",
          "Portrait",
          "Botanical",
          "Other"
        ]
      }
    },
    "availability": {
      "type": "object",
      "title": "Show Availability",
      "properties": {
        "preferredDates": {
          "type": "array",
          "items": {"type": "string", "format": "date"}
        },
        "timezone": {"type": "string"},
        "blackoutDates": {
          "type": "array",
          "items": {"type": "string", "format": "date"}
        }
      }
    },
    "socialProof": {
      "type": "object",
      "title": "Social Media Stats (optional)",
      "properties": {
        "instagramFollowers": {"type": "integer"},
        "tiktokFollowers": {"type": "integer"},
        "youtubeSubscribers": {"type": "integer"}
      }
    },
    "additionalNotes": {
      "type": "string",
      "title": "Anything else we should know?",
      "maxLength": 1000
    }
  }
}
